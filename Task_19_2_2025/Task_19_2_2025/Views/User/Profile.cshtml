@{
    ViewData["Title"] = "User Profile";
}

<h1 class="profile-heading">User Profile</h1>

<div class="profile-container">
    <div class="profile-card">
        <h3 class="profile-card-title">Your Profile Information</h3>
        <div class="profile-details">
            <div class="profile-item">
                <strong>Name:</strong> @ViewBag.Name
            </div>
            <div class="profile-item">
                <strong>Email:</strong> @ViewBag.Email
            </div>
            <div class="profile-item">
                <strong>Phone:</strong> @(string.IsNullOrEmpty(ViewBag.Phone) ? "Not Set" : ViewBag.Phone)
            </div>
            <div class="profile-item">
                <strong>Address:</strong> @(string.IsNullOrEmpty(ViewBag.Address) ? "Not Set" : ViewBag.Address)
            </div>
        </div>
        <div class="profile-actions">
            <a href="@Url.Action("EditProfile", "User")" class="btn btn-primary">Edit Profile</a>
        </div>
    </div>
</div>
