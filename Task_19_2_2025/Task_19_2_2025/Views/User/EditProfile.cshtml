@{
    ViewData["Title"] = "Edit Profile";
}

<h1 class="profile-heading">Edit Profile</h1>

<div class="profile-container">
    <form method="post" action="@Url.Action("UpdateProfile", "User")">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" value="@ViewBag.Name" required />
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" value="@ViewBag.Email" required readonly />
        </div>

        <div class="form-group">
            <label for="phone">Phone</label>
            <input type="text" name="phone" id="phone" value="@ViewBag.Phone" />
        </div>

        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" name="address" id="address" value="@ViewBag.Address" />
        </div>

        <div class="form-group form-button">
            <button type="submit" class="btn btn-success">Save Changes</button>
        </div>
    </form>
</div>
