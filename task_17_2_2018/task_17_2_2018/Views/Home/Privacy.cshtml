﻿@{
    Layout = null;

    student[] students = new student[]
    {
        new student{Name="shorman",Age=20,Email="shorman@gemail.com" },
        new student{Name="shorman",Age=25,Email="shorman@gemail.com" },
        new student{Name="shorman",Age=30,Email="shorman@gemail.com" }
    };
}
@functions {
    public class student
    {
        public string Name { get; set; }
        public int Age { get; set; }
        public string Email { get; set; }
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Side Navbar with Content</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
        }

        .container {
            display: flex;
            width: 100%;
        }

        /* Side Navigation Bar Styles */
        .sidenav {
            height: 100%;
            width: 250px;
            background-color: #333;
            padding-top: 20px;
            padding-right: 40px;
            position: fixed;
        }

            .sidenav a {
                padding: 15px 25px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                display: block;
                transition: 0.3s;
            }

                .sidenav a:hover {
                    background-color: #575757;
                }

        /* Main Content Styles */
        .content {
            /* margin-left: 250px; /* Same as the width of the sidenav */ */ padding: 20px;
            flex-grow: 1;
            background-color: #f4f4f4;
        }

            .content h1 {
                margin-top: 0;
            }

            .content p {
                line-height: 1.6;
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Side Navigation Bar -->
        <div class="sidenav">
            <a href="#home">Dashboard</a>
            <a href="#about">User</a>
            <a href="#services">Sitting</a>
            <a href="#contact">Logout</a>
        </div>

        <!-- Main Content -->
        <div class="content">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in students)
                    {
                        <tr>
                            <th>@s.Name</th>
                            <td>@s.Age</td>
                            <td>@s.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>