@model IEnumerable<Revision.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h1>Products</h1>

<p>
    <a asp-action="CreateProduct" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@item.Image" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text"><strong>Price:</strong> $@item.Price</p>
                    <div class="d-flex justify-content-between">
                        <a asp-action="EditProducts" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="ProductDetails" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                        <a asp-action="DeletePro" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>