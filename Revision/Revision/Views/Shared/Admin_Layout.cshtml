<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CardTasks</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" /> <!-- Add your custom CSS file -->
    <link rel="stylesheet" href="~/CardTasks.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="dashboard">
        <!-- Sidebar -->
        <div class="sidebar">
            <h2>Admin Panel</h2>
            <ul class="sidebar-menu">
                <li>
                    <a asp-controller="Admin" asp-action="Users" class="@(ViewData["ActivePage"] == "Users" ? "active" : "")">
                        <i class="fas fa-users"></i> Users
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Products" class="@(ViewData["ActivePage"] == "Products" ? "active" : "")">
                        <i class="fas fa-box"></i> Products
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Profile">
                        <i class="fas fa-box"></i> Profile
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Logout">
                        <i class="fas fa-box"></i> Logout
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            @RenderBody()
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
